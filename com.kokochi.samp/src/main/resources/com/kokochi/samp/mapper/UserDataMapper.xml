<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kokochi.samp.mapper.UserMapper">
	
	<resultMap type="com.kokochi.samp.domain.Member" id="memberMap">
		<id property="user_id" column="user_id "/>
		<result property="user_pwd" column="user_pwd "/>
		<result property="user_email" column="user_email "/>
		<result property="user_nickname" column="user_nickname "/>
		<result property="twitch_user_id" column="twitch_user_id "/>
	</resultMap>
	
	<resultMap type="com.kokochi.samp.domain.MemberAuth" id="authMap">
		<result property="user_id" column="user_id"/>
		<result property="authority" column="authority"/>
	</resultMap>
	
	<select id="readUser" resultType="Member">
		SELECT user_id, user_pwd, user_nickname, user_email, twitch_user_id
		FROM user
		WHERE user_id = #{user_id}
	</select>
	
	<select id="readAuth" resultType="MemberAuth">
		SELECT user_id, authority
		FROM user_auth
		WHERE user_id = #{user_id}
	</select>
	
